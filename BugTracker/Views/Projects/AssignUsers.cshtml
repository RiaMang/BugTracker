@model BugTracker.Models.ProjUserViewModel
    <link rel="stylesheet" href="~/Content/bootstrap-select/bootstrap-select.css" />
@{
    ViewBag.Title = "AssignUsers";
}

<div class="container">
    <h2> Assign Users </h2>

    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-green margin-bottom-40">
                <div class="panel-heading">
                    <h3 class="panel-title"> @Model.Project.Name</h3>
                </div>
            </div>
            <p>
                Name :
                <span>@Model.Project.Name</span>
            </p>

            <form action="AssignUsers" method="Post" class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Project.Id, new { })
                @Html.HiddenFor(m => m.Project.Name, new { })
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        @Html.ListBoxFor(m => m.SelectedUsers, Model.Users as MultiSelectList, htmlAttributes: new { @class="selectpicker" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn-u btn-u-green">Assign Users</button>
                    </div>
                </div>
            </form>


        </div>
        <!--End Hover Rows-->
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/bootstrap-select/bootstrap-select.js"></script>
    <script>
    $(function(){
    $('.selectpicker').selectpicker();
    })
    </script>
}
