@model BugTracker.Models.TicketAttachment
@{
    ViewBag.Title = "DelAttach";
}
<div class="container">
    <h3>Are you sure you want to delete this Attachment?</h3>

    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-green margin-bottom-40">
                <div class="panel-heading">
                    <h3 class="panel-title">Delete Attachment</h3>
                </div>
                <p>Created on : @Model.Created.DateTime.ToLongDateString()</p>
                <p>By : @Model.User.DisplayName</p>
                <p>@Model.Description</p>
                @if (Model.FileUrl != null)
                {
                    <img class="img-responsive" src="@Model.FileUrl" alt="">
                    <hr>
                }
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back", "Details", "Tickets", new {id= Model.TicketId}, null)
                    </div>
                }
            </div>
</div>
</div>
</div>